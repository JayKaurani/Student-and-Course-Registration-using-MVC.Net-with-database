@model DataBase_MVC.NET.Models.Student
@{
   
    bool value = false;
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save","Student",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.StudentId)

        <div class="row mt-sm-2 ms-sm-1 mb-sm-1 me-sm-1">
            @Html.LabelFor(model => model.Name, 
           htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, 
               new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", 
               new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mt-sm-2 ms-sm-1 mb-sm-1 me-sm-1">
            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address, 
               new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mt-sm-2 ms-sm-1 mb-sm-1 me-sm-1">
            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (Model.Gender == "Male")
                {
                    value = true;
                }
                @Html.RadioButtonFor(model => model.Gender, "Male", 
               htmlAttributes: new { @class = "form-check-input", @selected = value }) Male
                @if (Model.Gender == "Female")
                {
                    value = true;
                }
                @Html.RadioButtonFor(model => model.Gender, "Female", 
               htmlAttributes: new { @class = "form-check-input", @selected = value }) Female

            </div>
        </div>

        <div class="row mt-sm-2 ms-sm-1 mb-sm-1 me-sm-1">
            @Html.LabelFor(model => model.CourseId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model=>model.CourseId, 
               ViewBag.Course as List<SelectListItem>, htmlAttributes: new {@class="form-select"})
            </div>
        </div>

        <div class="row mt-sm-3 ms-sm-1 mb-sm-1 me-sm-1">
            <div class="col-sm-2">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
            <div class="col-sm-3">
                @Html.ActionLink("Back to List", "Index","Student",htmlAttributes:new {@class= "btn btn-outline-primary" })
            </div>
        </div>
    </div>
}
<div>
</div>
